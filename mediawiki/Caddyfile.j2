	#}
	route {
		@canonicalPath {
			file {path}/index.php
			not path */
		}
		redir @canonicalPath {http.request.orig_uri.path}/ 308

		@indexFiles file {
			try_files {path} {path}/index.php index.php
			split_path ''
		}
		rewrite @indexFiles {file_match.relative}
		rewrite /wiki/* /index.php?title={file_match.relative}
		root * /var/www/html/

		reverse_proxy path * mediawiki:9000 {
			transport fastcgi {
				split ''
			}
		}
	}
}
