#!/usr/bin/env bash

set -xet

# Update system
su -c "pacman -Sy archlinux-keyring; pacman -Syuu; pacman -S bash fish make coreutils busybox sudo"

# Configure system basics
sudo usermod -a -G root "$(whoami)"
[[ -e "/srv" ]] || sudo mkdir /srv

# Fetch atremis
cd /srv
sudo git clone --depth 1 https://codeberg.org/xvnet/atremis.git
sudo chmod 755 atremis

cd atremis
./atre pull

command -v atre
