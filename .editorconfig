# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.sql]
indent_style = tab
insert_final_newline = true

[*.hbs]
indent_style = tab
insert_final_newline = true
